@model CdStore.Models.Users

<h2>Moje konto</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="text-muted">Imię i nazwisko</label>
        <input asp-for="FullName" class="form-control bg-dark text-white" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="text-muted">Email</label>
        <input asp-for="Email" class="form-control bg-dark text-white" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="text-muted">Telefon</label>
        <input asp-for="PhoneNumber" class="form-control bg-dark text-white" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="text-muted">Adres dostawy</label>
        <textarea asp-for="DeliveryAddress" class="form-control bg-dark text-white" rows="3"></textarea>
        <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
    </div>

    <button class="btn btn-outline-success mt-3" type="submit">Zapisz zmiany</button>
    <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-outline-primary mt-3">Zmień hasło</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}