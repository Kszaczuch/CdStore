@model CdStore.Models.ChangePasswordViewModel

<h2>Zmień hasło</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="text-muted">Aktualne hasło</label>
        <input asp-for="CurrentPassword" class="form-control bg-dark text-white" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="text-muted">Nowe hasło</label>
        <input asp-for="NewPassword" class="form-control bg-dark text-white" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="text-muted">Potwierdź nowe hasło</label>
        <input asp-for="ConfirmPassword" class="form-control bg-dark text-white" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button class="btn btn-outline-success mt-3" type="submit">Zmień hasło</button>
    <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-primary mt-3">Powrót do profilu</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}