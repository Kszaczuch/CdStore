@model List<CdStore.Models.Album>
@{
    ViewData["Title"] = "Twoje ulubione";
    var cartIds = (ViewBag.CartIds as List<int>) ?? new List<int>();
    var favIds = (ViewBag.FavoriteIds as List<int>) ?? new List<int>();
}

<div class="container py-4">
    <h3 class="mb-4">Twoje ulubione</h3>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">Nie masz jeszcze żadnych ulubionych produktów.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var album in Model)
            {
                var inCart = cartIds.Contains(album.Id);
                var available = album.IloscNaStanie > 0;
                var isFav = favIds.Contains(album.Id);
                <div class="col">
                    <div class="card h-100 bg-dark text-white border-secondary">
                        <img src="@album.OkladkaLink" class="card-img-top square-img" alt="@album.Tytul" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@album.Tytul</h5>
                            <p class="card-subtitle mb-2 text-muted">@album.Artysta</p>
                            @if (!string.IsNullOrWhiteSpace(album?.Kategoria?.Nazwa))
                            {
                                <div class="small text-muted mb-2">@album.Kategoria.Nazwa</div>
                            }
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <strong>@album.Cena.ToString("C")</strong>
                                    <div>
                                        <button class="btn btn-link btn-fav p-0 me-2" data-id="@album.Id" data-in-fav="@(isFav ? "1" : "0")" title="Ulubione" aria-pressed="@(isFav ? "true" : "false")">
                                            <i class="bi @(isFav ? "bi-heart-fill text-danger" : "bi-heart text-white")"></i>
                                        </button>
                                        <button class="btn @(inCart ? "btn-success" : (available ? "btn-outline-info" : "btn-outline-secondary")) btn-sm btn-cart" data-id="@album.Id" data-in-cart="@(inCart ? "1" : "0")" @(available ? "" : "disabled")>
                                            @(inCart ? "W koszyku" : (available ? "Dodaj" : "Brak"))
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        (function () {
            const preCart = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(cartIds ?? []));
            const preFavs = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(favIds ?? []));

            if (Array.isArray(preCart)) {
                preCart.forEach(id => {
                    const btn = document.querySelector('.btn-cart[data-id="' + id + '"]');
                    if (btn) {
                        btn.textContent = 'W koszyku';
                        btn.classList.remove('btn-outline-info');
                        btn.classList.add('btn-success');
                        btn.dataset.inCart = '1';
                    }
                });
            }

            if (Array.isArray(preFavs)) {
                preFavs.forEach(id => {
                    const btn = document.querySelector('.btn-fav[data-id="' + id + '"]');
                    if (btn) {
                        const icon = btn.querySelector('i');
                        if (icon) {
                            icon.classList.remove('bi-heart', 'text-white');
                            icon.classList.add('bi-heart-fill', 'text-danger');
                        }
                        btn.dataset.inFav = '1';
                        btn.setAttribute('aria-pressed', 'true');
                    }
                });
            }

            document.addEventListener('click', function (e) {
                const target = e.target;
                if (!target) return;

                if (target.classList.contains('btn-cart')) {
                    const id = target.getAttribute('data-id');
                    if (!id) return;
                    if (target.getAttribute('data-in-cart') === '1') return;

                    fetch('/Home/AddToCart?albumId=' + encodeURIComponent(id), { method: 'POST' })
                        .then(r => r.json())
                        .then(j => {
                            if (j && j.success) {
                                target.textContent = 'W koszyku';
                                target.classList.remove('btn-outline-info');
                                target.classList.add('btn-success');
                                target.setAttribute('data-in-cart', '1');
                            } else {
                                alert('Nie udało się dodać do koszyka.');
                            }
                        })
                        .catch(() => alert('Wystąpił błąd podczas dodawania do koszyka.'));
                }

                const favBtn = target.closest ? target.closest('.btn-fav') : (target.classList.contains('btn-fav') ? target : null);
                if (favBtn && favBtn.classList.contains('btn-fav')) {
                    const id = favBtn.getAttribute('data-id');
                    if (!id) return;
                    const inFav = favBtn.getAttribute('data-in-fav') === '1';
                    const icon = favBtn.querySelector('i');

                    if (inFav) {
                        fetch('/Home/RemoveFromFavorites?albumId=' + encodeURIComponent(id), { method: 'POST' })
                            .then(r => r.json())
                            .then(j => {
                                if (j && j.success) {
                                    if (icon) {
                                        icon.classList.remove('bi-heart-fill', 'text-danger');
                                        icon.classList.add('bi-heart', 'text-white');
                                    }
                                    favBtn.setAttribute('data-in-fav', '0');
                                    favBtn.setAttribute('aria-pressed', 'false');
                                    const card = favBtn.closest('.col');
                                    if (card) card.remove();
                                } else {
                                    alert('Nie udało się usunąć z ulubionych.');
                                }
                            })
                            .catch(() => alert('Wystąpił błąd podczas usuwania z ulubionych.'));
                    } else {
                        fetch('/Home/AddToFavorites?albumId=' + encodeURIComponent(id), { method: 'POST' })
                            .then(r => r.json())
                            .then(j => {
                                if (j && j.success) {
                                    if (icon) {
                                        icon.classList.remove('bi-heart', 'text-white');
                                        icon.classList.add('bi-heart-fill', 'text-danger');
                                    }
                                    favBtn.setAttribute('data-in-fav', '1');
                                    favBtn.setAttribute('aria-pressed', 'true');
                                } else {
                                    alert('Nie udało się dodać do ulubionych.');
                                }
                            })
                            .catch(() => alert('Wystąpił błąd podczas dodawania do ulubionych.'));
                    }
                }
            });
        })();
    </script>
}