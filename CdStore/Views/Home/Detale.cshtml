@using System.Net
@model CdStore.Models.Album
@{
    ViewData["Title"] = Model?.Tytul ?? "Szczegóły";
    var cartIds = (ViewBag.CartIds as List<int>) ?? new List<int>();
    var inCart = Model != null && cartIds.Contains(Model.Id);
    var available = Model != null && Model.IloscNaStanie > 0;
    var favIds = (ViewBag.FavoriteIds as List<int>) ?? new List<int>();
    var isFav = Model != null && favIds.Contains(Model.Id);
}

<div class="container py-4">
    <div class="row g-4 align-items-stretch">
        <div class="col-12 col-md-5 text-center">
            <img src="@Model.OkladkaLink" alt="@Model.Tytul" class="rounded product-image" />
        </div>

        <div class="col-12 col-md-7 d-flex flex-column text-md-end">
            <div>
                <h1 class="display-6">@Model.Tytul</h1>
                <h4 class="text-muted mt-1">@Model.Artysta</h4>
                @if (!string.IsNullOrWhiteSpace(Model?.Kategoria?.Nazwa))
                {
                    <div class="text-muted small mt-1">@Model.Kategoria.Nazwa</div>
                }
            </div>

            <div class="mt-3 mb-4 mt-auto">

                <div class="mt-3 mb-3">
                    <span class="fs-4 fw-bold">@Model.Cena.ToString("C")</span>
                </div>

                <div class="mt-3 mb-3">
                    <span class="fs-4 text-muted">@Model.IloscNaStanie.ToString() na stanie</span>
                </div>

                <div class="d-flex align-items-center gap-2 mb-2 justify-content-md-end flex-wrap">
                    @if (!(User?.Identity?.IsAuthenticated == true))
                    {
                        <a href="@(Url.Action("Login", "Account"))" class="btn btn-link" title="Dodaj do ulubionych">
                            <i class="bi @(isFav ? "bi-heart-fill text-danger" : "bi-heart text-white")" style="font-size:1.25rem;"></i>
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-link btn-fav" data-id="@Model.Id" data-in-fav="@(isFav ? "1" : "0")" title="Ulubione" aria-pressed="@(isFav ? "true" : "false")">
                            <i class="bi @(isFav ? "bi-heart-fill text-danger" : "bi-heart text-white")" style="font-size:1.25rem;"></i>
                        </button>
                    }

                    @if (!available)
                    {
                        <button class="btn btn-secondary btn-lg" disabled>Brak na stanie</button>
                    }
                    else
                    {
                        @if (!(User?.Identity?.IsAuthenticated == true))
                        {
                            <a href="@(Url.Action("Login", "Account"))" class="btn @(inCart ? "btn-success" : "btn-outline-info") btn-lg">
                                @(inCart ? "W koszyku" : "Dodaj do koszyka")
                            </a>
                        }
                        else
                        {
                            <button class="btn @(inCart ? "btn-success" : "btn-outline-info") btn-lg btn-cart" data-id="@Model.Id" data-in-cart="@(inCart ? "1" : "0")">
                                @(inCart ? "W koszyku" : "Dodaj do koszyka")
                            </button>
                        }
                    }

                    <a href="@(Url.Action("Index", "Home"))" class="btn btn-outline-secondary btn-lg ms-2">Powrót do listy</a>
                </div>

            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="mx-auto" style="max-width:900px;">
                <div class="p-3 border rounded bg-dark text-white">
                    <h5>Opis</h5>
                    @if (string.IsNullOrWhiteSpace(Model.Opis))
                    {
                        <p class="text-center">Brak opisu.</p>
                    }
                    else
                    {
                        <p class="text-center">@Html.Raw(WebUtility.HtmlEncode(Model.Opis).Replace("\n", "<br/>"))</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const preFavorites = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(favIds ?? new List<int>()));

            if (Array.isArray(preFavorites)) {
                preFavorites.forEach(id => {
                    const btn = document.querySelector('.btn-fav[data-id="' + id + '"]');
                    if (btn) {
                        const icon = btn.querySelector('i');
                        if (icon) {
                            icon.classList.remove('bi-heart', 'text-white');
                            icon.classList.add('bi-heart-fill', 'text-danger');
                        }
                        btn.dataset.inFav = '1';
                        btn.setAttribute('aria-pressed', 'true');
                    }
                });
            }

            document.addEventListener('click', function (e) {
                const target = e.target;
                if (!target) return;

                if (target.classList.contains('btn-cart')) {
                    const id = target.getAttribute('data-id');
                    if (!id) return;
                    if (target.getAttribute('data-in-cart') === '1') return;

                    fetch('/Home/AddToCart?albumId=' + encodeURIComponent(id), { method: 'POST' })
                        .then(r => r.json())
                        .then(j => {
                            if (j && j.success) {
                                target.textContent = 'W koszyku';
                                target.classList.remove('btn-outline-info');
                                target.classList.add('btn-success');
                                target.setAttribute('data-in-cart', '1');
                            } else {
                                alert('Produkt już w koszyku lub wystąpił błąd.');
                            }
                        })
                        .catch(() => alert('Wystąpił błąd podczas dodawania do koszyka.'));
                }

                const favBtn = target.closest ? target.closest('.btn-fav') : (target.classList.contains('btn-fav') ? target : null);
                if (favBtn && favBtn.classList.contains('btn-fav')) {
                    const id = favBtn.getAttribute('data-id');
                    if (!id) return;
                    const inFav = favBtn.getAttribute('data-in-fav') === '1';
                    const icon = favBtn.querySelector('i');

                    if (inFav) {
                        fetch('/Home/RemoveFromFavorites?albumId=' + encodeURIComponent(id), { method: 'POST' })
                            .then(r => r.json())
                            .then(j => {
                                if (j && j.success) {
                                    if (icon) {
                                        icon.classList.remove('bi-heart-fill', 'text-danger');
                                        icon.classList.add('bi-heart', 'text-white');
                                    }
                                    favBtn.setAttribute('data-in-fav', '0');
                                    favBtn.setAttribute('aria-pressed', 'false');
                                } else {
                                    alert('Nie udało się usunąć z ulubionych.');
                                }
                            })
                            .catch(() => alert('Wystąpił błąd podczas usuwania z ulubionych.'));
                    } else {
                        fetch('/Home/AddToFavorites?albumId=' + encodeURIComponent(id), { method: 'POST' })
                            .then(r => r.json())
                            .then(j => {
                                if (j && j.success) {
                                    if (icon) {
                                        icon.classList.remove('bi-heart', 'text-white');
                                        icon.classList.add('bi-heart-fill', 'text-danger');
                                    }
                                    favBtn.setAttribute('data-in-fav', '1');
                                    favBtn.setAttribute('aria-pressed', 'true');
                                } else {
                                    alert('Nie udało się dodać do ulubionych.');
                                }
                            })
                            .catch(() => alert('Wystąpił błąd podczas dodawania do ulubionych.'));
                    }
                }
            });
        })();
    </script>
}