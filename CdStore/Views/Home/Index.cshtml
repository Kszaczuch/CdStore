@model IEnumerable<CdStore.Models.Album>
@{
    ViewData["Title"] = "Home";
    var cartIds = (ViewBag.CartIds as List<int>) ?? new List<int>();
    var categories = ViewBag.Categories as List<CdStore.Models.Kategoria> ?? new List<CdStore.Models.Kategoria>();
    var selCat = ViewBag.SelectedCategoryId as int?;
    var selAv = (ViewBag.SelectedAvailability as string) ?? "all";
    var selSort = (ViewBag.SelectedSort as string) ?? "price_asc";
}

<div class="text-center">
    <h3 class="display-5 fw-bold">Nasza oferta muzyczna</h3>
    <br />

    <div class="container mb-4">
        <form method="get" class="row g-2 justify-content-center align-items-end">
            <div class="col-auto">
                <label class="form-label small text-white-50">Dostępność</label>
                <select name="availability" class="form-select bg-dark text-white">
                    <option value="" selected="@(selAv == "all" ? "selected" : "")">Wszystkie</option>
                    <option value="in" selected="@(selAv == "in" ? "selected" : "")">Na stanie</option>
                    <option value="out" selected="@(selAv == "out" ? "selected" : "")">Brak na stanie</option>
                </select>
            </div>

            <div class="col-auto">
                <label class="form-label small text-white-50">Gatunek</label>
                <select name="kategoriaId" class="form-select bg-dark text-white">
                    <option value="">Wszystkie</option>
                    @foreach (var c in categories)
                    {
                        <option value="@c.Id" selected="@(selCat.HasValue && selCat.Value == c.Id ? "selected" : "")">@c.Nazwa</option>
                    }
                </select>
            </div>

            <div class="col-auto">
                <label class="form-label small text-white-50 ">Sortuj</label>
                <select name="sort" class="form-select bg-dark text-white ">
                    <option value="price_asc" selected="@(selSort == "price_asc" ? "selected" : "")">Cena rosnąco</option>
                    <option value="price_desc" selected="@(selSort == "price_desc" ? "selected" : "")">Cena malejąco</option>
                </select>
            </div>

            <div class="col-auto">
                <button type="submit" class="btn btn-outline-success">Filtruj</button>
                <a href="@(Url.Action("Index", "Home"))" class="btn btn-outline-danger ms-2">Wyczyść</a>
            </div>
        </form>
    </div>

    <div class="container text-center text-under-square">
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var album in Model)
            {
                var inCart = cartIds.Contains(album.Id);
                var available = album.IloscNaStanie > 0;
                <div class="col">
                    <img class="img-fluid square-img rounded" src="@album.OkladkaLink" alt="@album.Tytul" />
                    <p class="product-title">@album.Tytul - @album.Artysta</p>
                    <div><strong>@album.Cena.ToString("C")</strong></div>
                    <div class="d-flex flex-column align-items-center" style="gap:8px; margin-top:8px;">
                        @if (!available)
                        {
                            <button class="btn btn-secondary mb-2" disabled>Brak na stanie</button>
                        }
                        else
                        {
                            if (!(User?.Identity?.IsAuthenticated == true))
                            {
                                <a href="@(Url.Action("Login", "Account"))" class="btn @(inCart ? "btn-success" : "btn-outline-info") mb-2">
                                    @(inCart ? "W koszyku" : "Dodaj do koszyka")
                                </a>
                            }
                            else
                            {
                                <button class="btn @(inCart ? "btn-success" : "btn-outline-info") responsive-btn btn-cart mb-2" data-id="@album.Id" data-in-cart="@(inCart ? "1" : "0")">
                                    @(inCart ? "W koszyku" : "Dodaj do koszyka")
                                </button>
                            }
                        }
                        <a href="@(Url.Action("Detale", "Home", new { id = album.Id }))" class="btn btn-outline-secondary mb-2">Szczegóły</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cartModalLabel">Dodano do koszyka</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zamknij"></button>
            </div>
            <div class="modal-body">
                Produkt został dodany do koszyka.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="continue-shopping">Kupuj dalej</button>
                <button type="button" class="btn btn-primary" id="go-to-cart">Przejdź do koszyka</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const preselected = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(cartIds ?? new List<int>()));

            if (Array.isArray(preselected)) {
                preselected.forEach(id => {
                    const btn = document.querySelector('.btn-cart[data-id="' + id + '"]');
                    if (btn) {
                        btn.textContent = 'W koszyku';
                        btn.classList.remove('btn-outline-info');
                        btn.classList.add('btn-success');
                        btn.dataset.inCart = '1';
                    }
                });
            }

            document.addEventListener('click', function (e) {
                const target = e.target;
                if (!target) return;

                if (target.classList.contains('btn-cart')) {
                    const id = target.getAttribute('data-id');
                    if (!id) return;
                    if (target.getAttribute('data-in-cart') === '1') return;

                    fetch('/Home/AddToCart?albumId=' + encodeURIComponent(id), { method: 'POST' })
                        .then(r => r.json())
                        .then(j => {
                            if (j && j.success) {
                                target.textContent = 'W koszyku';
                                target.classList.remove('btn-outline-info');
                                target.classList.add('btn-success');
                                target.setAttribute('data-in-cart', '1');

                                const modalEl = document.getElementById('cartModal');
                                if (typeof bootstrap !== 'undefined') {
                                    const modal = new bootstrap.Modal(modalEl);
                                    modal.show();
                                } else {
                                    alert('Dodano do koszyku');
                                }
                            } else {
                                alert('Produkt już w koszyku lub wystąpił błąd.');
                            }
                        })
                        .catch(() => alert('Wystąpił błąd podczas dodawania do koszyka.'));
                }
            });

            document.getElementById('go-to-cart')?.addEventListener('click', function () {
                window.location.href = '/Home/Koszyk';
            });
        })();
    </script>
}