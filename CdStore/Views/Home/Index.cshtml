@model IndexHomeVm
@{
    ViewData["Title"] = "Home";
    var cartIds = (ViewBag.CartIds as List<int>) ?? new List<int>();
    var categories = ViewBag.Categories as List<CdStore.Models.Kategoria> ?? new List<CdStore.Models.Kategoria>();
    var favIds = (ViewBag.FavoriteIds as List<int>) ?? new List<int>();
}<div class="container py-4">
    <h3 class="mb-4 text-center">Nasza oferta muzyczna</h3>

    <div class="container mb-4">
        <form method="get" class="row g-2 justify-content-center align-items-end">
            <div class="col-auto">
                <label class="form-label small text-white-50">Dostępność</label>
                <select asp-for="availability" class="form-select bg-dark text-white">
                    <option value="">Wszystkie</option>
                    <option value="in">Na stanie</option>
                    <option value="out">Brak na stanie</option>
                </select>
            </div>

            <div class="col-auto">
                <label class="form-label small text-white-50">Gatunek</label>
                <select asp-for="kategoriaId" class="form-select bg-dark text-white">
                    <option value="0">Wszystkie</option>
                    @foreach (var c in categories)
                    {
                        <option value="@c.Id">@c.Nazwa</option>
                    }
                </select>
            </div>

            <div class="col-auto">
                <label class="form-label small text-white-50 ">Sortuj</label>
                <select asp-for="sort" class="form-select bg-dark text-white ">
                    <option value="name_asc">Nazwa A-Z</option>
                    <option value="name_desc">Nazwa Z-A</option>
                    <option value="price_asc">Cena rosnąco</option>
                    <option value="price_desc">Cena malejąco</option>
                </select>
            </div>

            <div class="col-auto">
                <button type="submit" class="btn btn-outline-success">Filtruj</button>
                <a href="@(Url.Action("Index", "Home"))" class="btn btn-outline-danger ms-2">Wyczyść</a>
            </div>
        </form>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var album in Model.Albums)
        {
            var inCart = cartIds.Contains(album.Id);
            var available = album.IloscNaStanie > 0;
            var isFav = favIds.Contains(album.Id);
            <div class="col">
                <div class="card h-100 bg-dark text-white border-secondary" data-details-url="@(Url.Action("Detale", "Home", new { id = album.Id }))">
                    <img src="@album.OkladkaLink" class="card-img-top square-img" alt="@album.Tytul" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@album.Tytul</h5>
                        <p class="card-subtitle mb-2 text-muted">@album.Artysta</p>
                        @if (!string.IsNullOrWhiteSpace(album?.Kategoria?.Nazwa))
                        {
                            <div class="small text-muted mb-2">@album.Kategoria.Nazwa</div>
                        }
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <strong>@album.Cena.ToString("C")</strong>
                                <div>
                                    @if (!(User?.Identity?.IsAuthenticated == true))
                                    {
                                        <a href="@(Url.Action("Login", "Account"))" class="btn btn-link btn-fav p-0 me-2" title="Dodaj do ulubionych">
                                            <i class="bi @(isFav ? "bi-heart-fill text-danger" : "bi-heart text-white")"></i>
                                        </a>
                                        <a href="@(Url.Action("Login", "Account"))" class="btn @(inCart ? "btn-success" : (available ? "btn-outline-info" : "btn-outline-secondary")) btn-sm btn-cart" data-id="@album.Id" data-in-cart="@(inCart ? "1" : "0")" @(available ? "" : "disabled")>
                                            @(inCart ? "W koszyku" : (available ? "Do koszyka" : "Brak"))
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-link btn-fav p-0 me-2" data-id="@album.Id" data-in-fav="@(isFav ? "1" : "0")" title="Ulubione" aria-pressed="@(isFav ? "true" : "false")">
                                            <i class="bi @(isFav ? "bi-heart-fill text-danger" : "bi-heart text-white")"></i>
                                        </button>
                                        <button class="btn @(inCart ? "btn-success" : (available ? "btn-outline-info" : "btn-outline-secondary")) btn-sm btn-cart" data-id="@album.Id" data-in-cart="@(inCart ? "1" : "0")" @(available ? "" : "disabled")>
                                            @(inCart ? "W koszyku" : (available ? "Do koszyka" : "Brak"))
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cartModalLabel">Dodano do koszyka</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zamknij"></button>
            </div>
            <div class="modal-body">
                Produkt został dodany do koszyka.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="continue-shopping">Kupuj dalej</button>
                <button type="button" class="btn btn-primary" id="go-to-cart">Przejdź do koszyka</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const preselected = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(cartIds ?? new List<int>()));
            const preFavorites = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(favIds ?? new List<int>()));

            if (Array.isArray(preselected)) {
                preselected.forEach(id => {
                    const btn = document.querySelector('.btn-cart[data-id="' + id + '"]');
                    if (btn) {
                        btn.textContent = 'W koszyku';
                        btn.classList.remove('btn-outline-info');
                        btn.classList.add('btn-success');
                        btn.dataset.inCart = '1';
                    }
                });
            }

            if (Array.isArray(preFavorites)) {
                preFavorites.forEach(id => {
                    const btn = document.querySelector('.btn-fav[data-id="' + id + '"]');
                    if (btn) {
                        const icon = btn.querySelector('i');
                        if (icon) {
                            icon.classList.remove('bi-heart', 'text-white');
                            icon.classList.add('bi-heart-fill', 'text-danger');
                        }
                        btn.dataset.inFav = '1';
                        btn.setAttribute('aria-pressed', 'true');
                    }
                });
            }

            document.addEventListener('click', function (e) {
                const target = e.target;
                if (!target) return;

                if (target.classList.contains('btn-cart')) {
                    const id = target.getAttribute('data-id');
                    if (!id) return;
                    if (target.getAttribute('data-in-cart') === '1') return;

                    fetch('/Home/AddToCart?albumId=' + encodeURIComponent(id), { method: 'POST' })
                        .then(r => r.json())
                        .then(j => {
                            if (j && j.success) {
                                target.textContent = 'W koszyku';
                                target.classList.remove('btn-outline-info');
                                target.classList.add('btn-success');
                                target.setAttribute('data-in-cart', '1');

                                const modalEl = document.getElementById('cartModal');
                                if (typeof bootstrap !== 'undefined') {
                                    const modal = new bootstrap.Modal(modalEl);
                                    modal.show();
                                } else {
                                    alert('Dodano do koszyka');
                                }
                            } else {
                                alert('Produkt już w koszyku lub wystąpił błąd.');
                            }
                        })
                        .catch(() => alert('Wystąpił błąd podczas dodawania do koszyka.'));
                    return;
                }

                const favBtn = target.closest ? target.closest('.btn-fav') : (target.classList.contains('btn-fav') ? target : null);
                if (favBtn && favBtn.classList.contains('btn-fav')) {
                    const id = favBtn.getAttribute('data-id');
                    if (!id) return;
                    const inFav = favBtn.getAttribute('data-in-fav') === '1';
                    const icon = favBtn.querySelector('i');

                    if (inFav) {
                        fetch('/Home/RemoveFromFavorites?albumId=' + encodeURIComponent(id), { method: 'POST' })
                            .then(r => r.json())
                            .then(j => {
                                if (j && j.success) {
                                    if (icon) {
                                        icon.classList.remove('bi-heart-fill', 'text-danger');
                                        icon.classList.add('bi-heart', 'text-white');
                                    }
                                    favBtn.setAttribute('data-in-fav', '0');
                                    favBtn.setAttribute('aria-pressed', 'false');
                                } else {
                                    alert('Nie udało się usunąć z ulubionych.');
                                }
                            })
                            .catch(() => alert('Wystąpił błąd podczas usuwania z ulubionych.'));
                    } else {
                        fetch('/Home/AddToFavorites?albumId=' + encodeURIComponent(id), { method: 'POST' })
                            .then(r => r.json())
                            .then(j => {
                                if (j && j.success) {
                                    if (icon) {
                                        icon.classList.remove('bi-heart', 'text-white');
                                        icon.classList.add('bi-heart-fill', 'text-danger');
                                    }
                                    favBtn.setAttribute('data-in-fav', '1');
                                    favBtn.setAttribute('aria-pressed', 'true');
                                } else {
                                    alert('Nie udało się dodać do ulubionych.');
                                }
                            })
                            .catch(() => alert('Wystąpił błąd podczas dodawania do ulubionych.'));
                    }
                    return;
                }

                const card = target.closest ? target.closest('.card') : null;
                if (card) {
                    if (target.closest && (target.closest('.btn-cart') || target.closest('.btn-fav') || target.closest('a'))) {
                        return;
                    }
                    const url = card.getAttribute('data-details-url');
                    if (url) {
                        window.location.href = url;
                    }
                }
            });

            document.getElementById('go-to-cart')?.addEventListener('click', function () {
                window.location.href = '/Home/Koszyk';
            });
        })();
    </script>
}