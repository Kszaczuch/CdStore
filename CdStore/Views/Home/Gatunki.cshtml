@model List<CdStore.Models.Kategoria>
@{
    ViewData["Title"] = "Zarządzanie gatunkami";
    var sel = ViewBag.SelectedCategory as CdStore.Models.Kategoria;
}
<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card bg-dark text-white mb-4">
    <div class="card-body">
        <form asp-action="SaveCategoryForm" method="post" class="row g-2 align-items-center needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@(sel != null ? sel.Id.ToString() : "")" />
            <div class="col-md-6">
                <input name="Nazwa" class="form-control text-white bg-dark" placeholder="Nazwa gatunku" maxlength="100" value="@(sel?.Nazwa ?? "")" required />
                <div class="invalid-feedback">Nazwa jest wymagana (maks. 100 znaków).</div>
            </div>

            <div class="col-md-6 d-flex justify-content-end">
                <button type="submit" class="btn btn-outline-success">Zapisz</button>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-dark table-striped align-middle">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th style="width:200px" class="text-end"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Nazwa</td>
                        <td class="text-end" style="white-space:nowrap;">
                            <div class="d-inline-flex gap-2 align-items-center">
                                <a class="btn btn-sm btn-outline-info" href="@Url.Action("Gatunki", new { id = c.Id })">Edytuj</a>

                                <form asp-action="DeleteCategoryForm" method="post" class="m-0 p-0">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@c.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Na pewno usunąć gatunek?');">Usuń</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">Brak gatunków.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        (function () {
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}