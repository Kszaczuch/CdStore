@model IEnumerable<CdStore.Models.Order>

@{
    ViewData["Title"] = "Wszystkie zamówienia";
}

<h2>Wszystkie zamówienia</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Użytkownik</th>
            <th>Email</th>
            <th>Kwota</th>
            <th>Data</th>
            <th>Opłacone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Id</td>
                <td>@o.FirstName @o.LastName</td>
                <td>@o.Email</td>
                <td>@o.Total zł</td>
                <td>@o.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(o.IsPaid ? "✔TAK" : "NIE")</td>
                <td>
                    <a class="btn btn-primary btn-sm"
                       asp-action="OrderSummary" asp-route-id="@o.Id">
                        Szczegóły
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
