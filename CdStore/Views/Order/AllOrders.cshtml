@model IEnumerable<CdStore.Models.Order>
@using CdStore.Models
@using System
@using System.Linq

@{
    ViewData["Title"] = "Wszystkie zamówienia";
    var statusOptions = new (string Value, string Label)[]
    {
        ("oczekujace", "Oczekujące"),
        ("wyslane", "Wysłane"),
        ("dostarczone", "Dostarczone")
    };
}

<h2 class="text-center">Wszystkie zamówienia</h2>

<table class="table table-dark table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Użytkownik</th>
            <th>Email</th>
            <th>Kwota</th>
            <th>Data zamówienia</th>
            <th>Opłacone</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody class="text-white">
        @foreach (var o in Model)
        {
            var curStatus = o.Status switch
            {
                OrderStatus.Wyslane => "wyslane",
                OrderStatus.Dostarczone => "dostarczone",
                _ => "oczekujace"
            };

            <tr>
                <td>
                    <a href="@Url.Action("OrderSummary", "Order", new { id = o.Id })">#@o.Id</a>
                </td>
                <td>@o.FirstName @o.LastName</td>
                <td>@o.Email</td>
                <td>@o.Total zł</td>
                <td>@o.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(o.IsPaid ? "TAK" : "NIE")</td>
                <td>
                    <form asp-action="ChangeStatus" asp-controller="Order" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@o.Id" />
                        <select name="status" class="form-select bg-dark text-white form-select-sm d-inline-block" style="width:auto;" onchange="this.form.submit()">
                            @foreach (var opt in statusOptions)
                            {
                                if (opt.Value == curStatus)
                                {
                                    <option value="@opt.Value" selected>@opt.Label</option>
                                }
                                else
                                {
                                    <option value="@opt.Value">@opt.Label</option>
                                }
                            }
                        </select>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>